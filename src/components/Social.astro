---
const { platform, username } = Astro.props;
const platformLower = platform.toLowerCase();
---

<a
  href={`https://www.${platformLower}.com/${username}`}
  target="_blank"
  rel="noopener noreferrer"
>
  {platform}
</a>

<style>
  a {
    padding: 0.5rem 1rem;
    color: #fff;
    background-color: var(--accent-color);
    border-radius: 0.5rem;
  }
</style>
