---
import Navigation from "./Navigation.astro";
import ThemeIcon from "./ThemeIcon.astro";
---

<header>
  <nav>
    <Navigation />
    <div class="divider" aria-hidden="true"></div>
    <ThemeIcon />
  </nav>
</header>

<style is:global>
  header {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 1.5rem 0;
    nav {
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 0.75rem 2rem;
      gap: 1rem;
      border-radius: 25px;
      background-color: rgb(25, 25, 25);
      .divider {
        width: 1px;
        height: 1.5rem;
        background-color: rgba(255, 255, 255, 0.25);
      }
    }
  }
  @media (max-width: 768px) {
    nav {
      grid-template-columns: 1fr;
      grid-row-gap: 1rem;
      text-align: left;
    }

    .logo,
    .nav-links,
    .theme-icon {
      justify-self: start;
    }
  }
</style>
