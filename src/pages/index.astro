---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "Beknur Saktanbekov";
---

<BaseLayout pageTitle={pageTitle}>
  <section class="hero">
    <h1>Hello, I'm Beknur</h1>
    <p>
      I'm a software engineer with a passion for building web applications and
      exploring new technologies. Welcome to my personal website!
    </p>
    <div class="actions">
      <a href="/about" class="btn primary">Learn More</a>
      <a href="/blog" class="btn outline">Read My Blog</a>
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    padding: 4rem 2rem;
    h1,
    p {
      text-align: center;
    }
    h1 {
      font-size: 2.5rem;
      margin-bottom: 2rem;
    }
    p {
      font-size: 1.25rem;
      max-width: 70%;
      margin: 0 auto;
    }
    .actions {
      display: flex;
      margin: 2rem auto;
      justify-content: center;
      gap: 1rem;
    }
  }

  @media screen and (max-width: 768px) {
    .hero {
      padding: 2rem 0.5rem;
      h1 {
        font-size: 2rem;
      }
      p {
        font-size: 1.125rem;
        max-width: 90%;
      }
    }
  }
</style>
